<?xml version="1.0" encoding="utf-8"?>
<odoo>
       <!-- Назва файлу з переглядами повина бути написана з маленької літери, та мати суффікс "_views" -->

        <record id="diagnoz_model_tree" model="ir.ui.view">
            <field name="name">hospital.diagnoz.tree ()</field>
            <field name="model">hospital.diagnoz</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="diagnoz_model_form" model="ir.ui.view">
            <field name="name">hospital.diagnoz.form ()</field>
            <field name="model">hospital.diagnoz</field>
            <field name="arch" type="xml">
                <form>
                    <header></header>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="diagnoz_model_act_window" model="ir.actions.act_window">
            <field name="name">Diagnoz</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.diagnoz</field>
            <field name="view_mode">tree,form</field>
        </record>


</odoo>
